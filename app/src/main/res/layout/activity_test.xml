<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/landing_background"
    android:scrollbars="vertical"
    tools:context=".TestActivity">
    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:titleTextColor="#fff"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/arrowback"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                app:cardElevation="12dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical"
                    android:weightSum="12">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:weightSum="10"
                        android:elevation="12dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:weightSum="5"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:text="Board Paper   2018"
                                android:textColor="#000"
                                android:textSize="20sp"
                                android:padding="5dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/proximanova"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:lines="1"
                                android:padding="5dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:text="Paper 1"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="60dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/profile"/>
                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#a7a1a1">

                    </View>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:text="Browse through the question for  a quick version"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:padding="10dp"
                                android:weightSum="9"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="60dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:layout_gravity="center"
                                    android:src="@drawable/question"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:paddingTop="5dp"
                                    android:layout_weight="2"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:fontFamily="@font/proximanova"
                                    android:text="170"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textColor="#000"
                                    android:fontFamily="@font/proximanova"
                                    android:text="Questions"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:padding="10dp"
                                android:weightSum="9"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="60dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:layout_gravity="center"
                                    android:src="@drawable/clock"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:paddingTop="5dp"
                                    android:layout_weight="2"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:fontFamily="@font/proximanova"
                                    android:text="3 Hr"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textColor="#000"
                                    android:fontFamily="@font/proximanova"
                                    android:text="Durations"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:padding="10dp"
                                android:weightSum="9"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="60dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:layout_gravity="center"
                                    android:src="@drawable/medal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:paddingTop="5dp"
                                    android:layout_weight="2"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:fontFamily="@font/proximanova"
                                    android:text="170"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textColor="#000"
                                    android:fontFamily="@font/proximanova"
                                    android:text="Marks"/>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="15dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:background="#5b0000"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="Description "/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"></ScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="65dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum
Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                        android:textAlignment="center"
                        android:textColor="#0f2b4b"
                        android:textSize="15sp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>




        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/button_timer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text=""
        android:textSize="25sp"
        android:background="#130021"/>


    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
